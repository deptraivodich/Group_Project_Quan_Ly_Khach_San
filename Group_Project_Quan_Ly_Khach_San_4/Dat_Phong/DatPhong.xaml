<Window x:Class="Group_Project_Quan_Ly_Khach_San_Nhom4.Dat_Phong.DatPhong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Group_Project_Quan_Ly_Khach_San_Nhom4.Dat_Phong"
        mc:Ignorable="d"
        Title="DatPhong" Height="450" Width="800">
    <Grid>
        <!-- BACKGROUND -->
        <Image Source="pack://application:,,,/Dat_Phong/hotel.jpg"
           Stretch="UniformToFill" Margin="0,0,0,-62"/>

        <!-- OVERLAY -->
        <Border Background="#66000000" Margin="0,0,0,-45"/>

        <Grid Margin="60">
            <StackPanel Width="420">
                <TextBlock Text="ENJOY A LUXURY"
                       Foreground="White"
                       FontSize="32"/>

                <TextBlock Text="EXPERIENCE"
                       Foreground="White"
                       FontSize="40"
                       FontWeight="Bold"
                       Margin="0,0,0,30"/>

                <TextBlock Text="Họ tên" Foreground="White"/>
                <TextBox Height="34" Margin="0,4,0,12"
                     Text="{Binding CustomerName}"/>

                <TextBlock Text="Loại phòng" Foreground="White"/>
                <ComboBox Height="34" Margin="0,4,0,12"
                      ItemsSource="{Binding RoomTypes}"
                      SelectedItem="{Binding SelectedRoomType}"
                      DisplayMemberPath="Name"/>

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,8,0">
                        <TextBlock Text="Ngày nhận" Foreground="White"/>
                        <DatePicker SelectedDate="{Binding CheckInDate}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Ngày trả" Foreground="White"/>
                        <DatePicker SelectedDate="{Binding CheckOutDate}"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Số khách"
                    Foreground="White"
                    VerticalAlignment="Center"/>

                    <TextBox
                    Height="34"
                    Text="{Binding NumberOfGuests}" Grid.ColumnSpan="2" Margin="95,0,238,0"/>
                </Grid>
                <Button Content="ĐẶT PHÒNG"
                    Height="42"
                    Background="Black"
                    Foreground="White"
                    FontWeight="Bold"
                    Command="{Binding BookCommand}"/>

                <Button Content="DANH SÁCH ĐẶT PHÒNG"
                    Height="42"
                    Margin="0,10,0,0"
                    BorderBrush="White"
                    Foreground="White"
                    Background="Transparent"
                    Command="{Binding OpenListCommand}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
