<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập Hệ Thống" Height="450" Width="400" 
        WindowStartupLocation="CenterScreen" Background="#F5F6FA" ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="40">
            <TextBlock Text="RESTAURANT MANAGEMENT" FontSize="22" FontWeight="Bold" 
                       Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBlock Text="Tên đăng nhập" Foreground="#7F8C8D" Margin="0,0,0,5"/>
            <TextBox Name="txtUsername" Height="35" Margin="0,0,0,15" VerticalContentAlignment="Center" Padding="5"/>

            <TextBlock Text="Mật khẩu" Foreground="#7F8C8D" Margin="0,0,0,5"/>
            <PasswordBox Name="txtPassword" Height="35" Margin="0,0,0,15" VerticalContentAlignment="Center" Padding="5"/>

            <TextBlock Text="Chức vụ" Foreground="#7F8C8D" Margin="0,0,0,5"/>
            <ComboBox Name="cbRole" Height="35" Margin="0,0,0,25" VerticalContentAlignment="Center">
                <ComboBoxItem Content="Lễ Tân" IsSelected="True"/>
                <ComboBoxItem Content="Admin"/>
            </ComboBox>

            <Button Content="ĐĂNG NHẬP" Height="40" Background="#3498DB" Foreground="White" 
                    FontWeight="Bold" BorderThickness="0" Click="BtnLogin_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <TextBlock Name="txtError" Foreground="#E74C3C" HorizontalAlignment="Center" Margin="0,10,0,0" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Window>