<Window x:Class="Group_Project_Quan_Ly_Khach_San_4.Phong.ChiTietKhachSanView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi Tiết Đặt Phòng" Height="800" Width="1200"
        Background="#F2F6F9" WindowStartupLocation="CenterScreen">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding HotelName}" FontSize="32" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,15,0"/>
                    <TextBlock Text="{Binding Stars}" FontSize="18" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <TextBlock Text="📍" FontSize="16" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding Location}" Foreground="#64748B" FontSize="16"/>
                </StackPanel>
            </StackPanel>

            <Grid Grid.Row="1" Height="400" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6.5*"/>
                    <ColumnDefinition Width="3.5*"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="8 0 0 8" ClipToBounds="True" Margin="0,0,5,0">
                    <Image Source="{Binding ImageUrl}" Stretch="UniformToFill"/>
                </Border>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Border CornerRadius="0 8 0 0" ClipToBounds="True" Margin="0,0,0,5">
                        <Image Source="https://images.unsplash.com/photo-1542314831-c6a4d27ece08?q=80&amp;w=400&amp;auto=format&amp;fit=crop" Stretch="UniformToFill"/>
                    </Border>
                    <Border Grid.Row="1" CornerRadius="0 0 8 0" ClipToBounds="True">
                        <Image Source="https://images.unsplash.com/photo-1578683010236-d716f9a3f461?q=80&amp;w=400&amp;auto=format&amp;fit=crop" Stretch="UniformToFill"/>
                    </Border>
                </Grid>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6.5*"/>
                    <ColumnDefinition Width="3.5*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="30" Margin="0,0,30,0" VerticalAlignment="Top">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.05" Color="Black"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="{Binding TenLoaiPhong, StringFormat='Chi tiết | {0}'}" FontSize="24" FontWeight="Bold" Foreground="#1E293B" TextWrapping="Wrap" Margin="0,0,0,20"/>

                        <TextBlock Text="Mô tả &amp; Tiện ích:" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding MotaChiTiet}" Foreground="#475569" FontSize="16" TextWrapping="Wrap" LineHeight="28" Margin="0,0,0,10"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Column="1">
                    <Border Background="#FFF4E5" CornerRadius="12" Padding="25" BorderBrush="#FFE0B2" BorderThickness="1" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Bảng giá niêm yết" FontWeight="Bold" FontSize="18" Foreground="#E65100" Margin="0,0,0,20"/>

                            <Grid Margin="0,0,0,15">
                                <TextBlock Text="Ngày thường" Foreground="#555" FontSize="15" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding GiaMotDem, StringFormat='{}{0:N0} ₫'}" FontWeight="Bold" FontSize="18" HorizontalAlignment="Right" Foreground="#333"/>
                            </Grid>
                            <Grid Margin="0,0,0,20">
                                <TextBlock Text="Cuối tuần / Lễ tết" Foreground="#555" FontSize="15" VerticalAlignment="Center"/>
                                <TextBlock Text="Liên hệ" FontWeight="Bold" FontSize="16" HorizontalAlignment="Right" Foreground="#E65100"/>
                            </Grid>

                            <TextBlock Text="📌 Giảm thêm 10% nếu khách là hội viên thân thiết" Foreground="#E65100" FontStyle="Italic" FontSize="13" Margin="0,0,0,25" TextWrapping="Wrap"/>
                            <Border Background="#FFEBEE" BorderBrush="#FFCDD2" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,20">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⚠️" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Lưu ý: Khách hàng phải từ đủ 18 tuổi trở lên và có mang theo CCCD/Hộ chiếu để làm thủ tục nhận phòng." 
                                               Foreground="#D32F2F" FontStyle="Italic" FontWeight="SemiBold" FontSize="12" TextWrapping="Wrap" Width="260"/>
                                </StackPanel>
                            </Border>

                            <Button Content="✅ XÁC NHẬN ĐẶT PHÒNG" Background="#F57C00" Foreground="White" FontSize="16" FontWeight="Bold" Padding="15" BorderThickness="0" Cursor="Hand" Margin="0,0,0,20"/>

                            <TextBlock Text="Cần hỗ trợ kỹ thuật?" HorizontalAlignment="Center" Foreground="#888" FontSize="13"/>
                            <TextBlock Text="📞 0795659121" HorizontalAlignment="Center" FontWeight="Black" FontSize="26" Foreground="#E65100" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.05" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Border Background="#4CAF50" CornerRadius="4" Padding="10,6" Margin="0,0,10,0">
                                    <TextBlock Text="{Binding Score}" Foreground="White" FontWeight="Bold" FontSize="18"/>
                                </Border>
                                <TextBlock Text="{Binding ScoreText}" Foreground="#4CAF50" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding ReviewCount, StringFormat='{}{0} đánh giá'}" Foreground="#888" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="&#34;Khách sạn rất tuyệt vời, bãi biển riêng tư, nhân viên thân thiện. Chắc chắn sẽ quay lại!&#34;" FontStyle="Italic" Foreground="#555" TextWrapping="Wrap" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock Text="- Anh Huy (Khách lưu trú tháng trước)" Foreground="#888" FontSize="13" HorizontalAlignment="Right"/>
                            <TextBlock Text="&#34;Nhiều khách làm tôi muốn lọ quá . Tôi chắc chắn sẽ quay lại đây để tận hưởng một lần nữa!&#34;" FontStyle="Italic" Foreground="#555" TextWrapping="Wrap" FontSize="14" Margin="0,0,0,10"/>
                            <TextBlock Text="- Anh Khả (Khách lưu trú vài ngày trước)" Foreground="#888" FontSize="13" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>