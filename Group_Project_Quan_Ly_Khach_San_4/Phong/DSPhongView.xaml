<Window x:Class="Group_Project_Quan_Ly_Khach_San_4.Phong.DSPhongView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phần Mềm Quản Lý Khách Sạn" Height="800" Width="1300"
        Background="#F2F6F9" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#1E293B">
            <StackPanel Margin="20,30,20,0">
                <TextBlock Text="🏨 HOTEL ADMIN" Foreground="White" FontSize="22" FontWeight="Black" Margin="0,0,0,40" HorizontalAlignment="Center"/>

                <Button Content="📊 Tổng quan (Dashboard)" Click="MenuTrangChu_Click" Background="Transparent" Foreground="#CBD5E1" BorderThickness="0" Padding="15" Margin="0,0,0,10" HorizontalContentAlignment="Left" Cursor="Hand"/>
                <Button Content="🛏️ Quản lý phòng" Click="MenuPhong_Click" Background="#17A2B8" Foreground="White" BorderThickness="0" Padding="15" Margin="0,0,0,10" HorizontalContentAlignment="Left" Cursor="Hand" FontWeight="Bold"/>

                <Button Content="📅 Danh sách đặt phòng" Click="BtnDatPhong_Click" Background="Transparent" Foreground="#CBD5E1" BorderThickness="0" Padding="15" Margin="0,0,0,10" HorizontalContentAlignment="Left" Cursor="Hand"/>
                <Button Content="⚙️ Cài đặt hệ thống" Background="Transparent" Foreground="#CBD5E1" BorderThickness="0" Padding="15" HorizontalContentAlignment="Left" Cursor="Hand"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock Text="Hệ thống quản lý" Foreground="#0F172A" FontSize="28" FontWeight="Bold"/>
                    <TextBlock Text="Quản lý và cập nhật trạng thái khách sạn của bạn." Foreground="#64748B" FontSize="14" Margin="0,5,0,0"/>
                </StackPanel>

                <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15,8" BorderBrush="#E2E8F0" BorderThickness="1" VerticalAlignment="Center" Width="250">
                    <TextBox x:Name="txtSearch" Text="Tìm kiếm phòng..." Foreground="Gray" Background="Transparent" BorderThickness="0" VerticalAlignment="Center" FontSize="14" GotFocus="TxtSearch_GotFocus" LostFocus="TxtSearch_LostFocus"/>
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="280"/>
                </Grid.ColumnDefinitions>

                <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,0,20,0">
                    <ItemsControl ItemsSource="{Binding DanhSachPhong}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" CornerRadius="8" Margin="0,0,10,20" ClipToBounds="True" Cursor="Hand" MouseLeftButtonUp="HotelCard_Click">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.05" Color="Black"/>
                                    </Border.Effect>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="260"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="200"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <Image Source="{Binding ImageUrl}" Stretch="UniformToFill" Height="200"/>

                                            <Border Background="{Binding TrangThaiColor}" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="15,6">
                                                <TextBlock Text="{Binding TrangThai}" Foreground="White" FontWeight="Bold" FontSize="14"/>
                                            </Border>
                                        </Grid>

                                        <StackPanel Grid.Column="1" Margin="20">
                                            <TextBlock Text="{Binding SoPhong, StringFormat='Phòng {0}'}" FontSize="24" FontWeight="Black" Foreground="#1E293B" TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding TenLoaiPhong}" FontSize="16" FontWeight="Bold" Foreground="#64748B" Margin="0,5,0,10"/>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                <TextBlock Text="{Binding Stars}" FontSize="13" Margin="0,0,10,0"/>
                                                <Border Background="#4CAF50" CornerRadius="4" Padding="6,2" Margin="0,0,5,0">
                                                    <TextBlock Text="{Binding Score}" Foreground="White" FontWeight="Bold" FontSize="12"/>
                                                </Border>
                                                <TextBlock Text="{Binding ScoreText}" Foreground="#4CAF50" FontWeight="Bold" FontSize="12" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding ReviewCount, StringFormat='({0}) đánh giá'}" Foreground="#888" FontSize="12"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                                <TextBlock Text="📍" FontSize="13" Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Location}" Foreground="#666" FontSize="13"/>
                                            </StackPanel>

                                            <ItemsControl ItemsSource="{Binding Tags}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="6,3" Margin="0,0,8,8">
                                                            <TextBlock Text="{Binding}" Foreground="#555" FontSize="11"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>

                                        <Rectangle Grid.Column="1" HorizontalAlignment="Right" Width="1" Fill="#EEEEEE" Margin="0,15"/>

                                        <StackPanel Grid.Column="2" Margin="15" VerticalAlignment="Center" HorizontalAlignment="Right">
                                            <TextBlock Text="*Giá niêm yết mỗi đêm" Foreground="#888" FontSize="11" HorizontalAlignment="Right" Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding GiaMotDem, StringFormat='{}{0:N0} ₫'}" Foreground="#F57C00" FontSize="20" FontWeight="Bold" HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding SoKhachToiDa, StringFormat='Sức chứa: Tối đa {0} khách'}" Foreground="#555" FontSize="12" TextWrapping="Wrap" TextAlignment="Right" Margin="0,5,0,20"/>

                                            <Border Background="#17A2B8" Width="36" Height="36" CornerRadius="18" HorizontalAlignment="Right" Cursor="Hand">
                                                <TextBlock Text="➔" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <Border Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.05" Color="Black"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🗿" FontSize="40" Margin="0,0,15,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Cần hỗ trợ?" Foreground="#555" FontSize="13"/>
                                <TextBlock Text="0795659121" Foreground="#F57C00" FontSize="20" FontWeight="Bold"/>
                                <TextBlock Text="Giải đáp thắc mắc" Foreground="#888" FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="White" CornerRadius="12" Padding="20">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.05" Color="Black"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Lọc Tìm Kiếm" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1E293B"/>

                            <TextBlock Text="Trạng thái:" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#475569"/>
                            <CheckBox Content="Trống (Sẵn sàng)" Margin="0,0,0,8"/>
                            <CheckBox Content="Đang ở" Margin="0,0,0,8"/>
                            <CheckBox Content="Đang dọn / Bảo trì" Margin="0,0,0,15"/>

                            <TextBlock Text="Loại phòng:" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#475569"/>
                            <CheckBox Content="Phòng Standard" Margin="0,0,0,8"/>
                            <CheckBox Content="Phòng Superior" Margin="0,0,0,8"/>
                            <CheckBox Content="Phòng Deluxe" Margin="0,0,0,8"/>
                            <CheckBox Content="Phòng Suite / Family" Margin="0,0,0,20"/>

                            <Button Content="🔄 Làm mới" Background="#F1F5F9" Foreground="#475569" FontWeight="SemiBold" BorderThickness="0" Padding="12" Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                    <Border Background="#FFF7ED" BorderBrush="#FED7AA" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,20,0,0">
                        <StackPanel>
                            <TextBlock Text="🔔 Nhắc nhở nhân viên ca trực:" FontWeight="Bold" Foreground="#C2410C" Margin="0,0,0,10"/>
                            <TextBlock Text="- Tất cả các phòng check-out lúc 8h." Foreground="#9A3412" FontSize="12" Margin="0,0,0,5" TextWrapping="Wrap"/>
                            <TextBlock Text="- Sắp xếp dọn phòng gấp cho khách hàng mới vào phòng." Foreground="#9A3412" FontSize="12" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>